{% extends 'base.html.twig' %}

{% block body %}
    <div class="m-3">
        <a href="link/add/"><i class="fas fa-plus"></i>Ajouter un lien</a>
    </div>
    <table>
        <tr>
            <td></td>
            <td>Title</td>
            <td>Url</td>
            <td>Action</td>
        </tr>
    {% for link in links %}
            <tr>
                <td class="grid m-3">
                    <a href="{{ path('app_linkreaction', {link: link.id}) }}/?type=LIKE"><i class="fas fa-arrow-up"></i></a>
                    <a href="{{ path('app_linkreaction', {link: link.id}) }}/?type=DISLIKE"><i class="fas fa-arrow-down"></i></a>
                </td>
                <td class="m-3 p-3">{{ link.title }}</td>
                <td class="m-3 p-3">{{ link.url }}</td>
                <td class="m-3">
                    <a href="{{ path('app_linkshow', {link: link.id}) }}" class="m-3">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('app_linkdelete', {link: link.id}) }}" class="m-3">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
    {% endfor %}
    </table>
{% endblock %}