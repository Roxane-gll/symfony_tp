{% extends 'base.html.twig' %}

{% block body %}
    <table>
        <tr>
            <td></td>
            <td>Title</td>
            <td>Url</td>
            <td>Action</td>
        </tr>
    {% for link in links %}
            <tr>
                <td class="grid m-3">
                    <a href="add/reaction/{{ link.id }}/?type=LIKE"><i class="fas fa-arrow-up"></i></a>
                    <a href="add/reaction/{{ link.id }}/?type=DISLIKE"><i class="fas fa-arrow-down"></i></a>
                </td>
                <td class="m-3 p-3">{{ link.title }}</td>
                <td class="m-3 p-3">{{ link.url }}</td>
                <td class="m-3">
                    <a href="/link/{{ link.id }}" class="m-3">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="/link/delete/{{ link.id }}" class="m-3">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
    {% endfor %}
    </table>
{% endblock %}